<p id="notice"><%= notice %></p>

<div class="container">
  <h2>タスク一覧</h2>

    <div class="task col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-12 table-responsive">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>作成者</th>
          <th>タイトル</th>
          <th>締切</th>
          <th>担当者</th>
          <th>状況</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= task.user.name %></td>
            <td><%= task.title %></td>
            <td><%= task.deadline.strftime("%y/%m/%d %H:%M") %></td>
            <td><%= task.charge.name %></td>
            <td><%= task.done ? '完了' : '未完了' %></td>
            <td><%= link_to '詳細', user_task_path(task.user, task) %></td>
            <td><%= link_to '編集', edit_user_task_path(task.user, task) %></td>
            <td><%= link_to '削除', user_task_path(task.user, task), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
</div>
<%= link_to "タスクを作成する", new_user_task_path(@user), class: 'btn btn-default' %><br>
<%= link_to "戻る", root_path, class: 'btn btn-default' %>
