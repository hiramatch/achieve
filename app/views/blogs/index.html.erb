<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    <h1>ブログ一覧</h1>
    <%= link_to "ブログを作成する", new_blog_path, class: 'btn btn-default' %><br>
    <%= link_to "戻る", root_path, class: 'btn btn-default' %>
    <% @blogs.each do |blog| %>
      <div class="row">
        <%= profile_img2(User.find(blog.user_id)) if profile_img2(User.find(blog.user_id)) %> <%= User.find(blog.user_id).name %>さんが投稿しました

        <h4><strong><%= blog.title %></strong></h4>
        <p><%= blog.content %></p>
        <%= link_to "編集", edit_blog_path(blog.id) , class: 'btn btn-default btn-sm btn-success' %><br>
        <%= link_to "削除", blog_path(blog), method: :delete, class: 'btn btn-default btn-sm btn-danger' , data: { confirm:"本当に削除していいですか?" } %><br>
      </div>
    <% end %>
  </div>
</div>
